<article class="article teaser <%= post.featured_image ? 'teaser--img' : '' %>">
  <a class="teaser__title" href="<%= url_for(post.path) %>" title="<%= post.title %>"
     style="background-image: url(<%= url_for(post.path) + post.featured_image %>)">
    <h1><%= post.title %></h1>
  </a>
  <% if (post.excerpt) { %>
    <%- post.excerpt %>
    <p><a href="<%= url_for(post.path) %>" title="<%= _p('Read more...') %>">
        <%= _p('Read more...') %>
      </a></p>
  <% } %>
</article>
