{
  "name": "ikerhexo",
  "version": "1.0.0",
  "description": "My own hexo theme",
  "private": true,
  "paths": {
    "cssbuild": "node-sass src/index.scss source/css/index.css --include-path ./node_modules --include-path ./src",
    "postcss": "postcss --use autoprefixer -o source/css/main.css source/css/index.css"
  },
  "scripts": {
    "build": "npm run build:css && npm run post:css && npm run build:js",
    "build:js": "NODE_ENV=production webpack",
    "build:css": "npm run sprite && $npm_package_paths_cssbuild  --output-style compressed",
    "post:css": "$npm_package_paths_postcss",
    "watch:js": "webpack --watch",
    "watch:css": "npm run build:css && $npm_package_paths_cssbuild -wr",
    "watch:post": "$npm_package_paths_postcss -w --verbose",
    "sprite": "svg-sprite -sD source --symbol-dest svg --symbol-sprite sprite.svg ./src/svg/*.svg"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "5.9.0"
  },
  "devDependencies": {
    "autoprefixer": "9.6.1",
    "handlebars": "4.1.2",
    "handlebars-loader": "1.7.1",
    "node-sass": "4.12.0",
    "postcss-cli": "6.1.3",
    "svg-sprite": "1.5.0",
    "webpack": "4.35.3",
    "webpack-cli": "3.3.5"
  },
  "browserslist": [
    "last 2 versions",
    "ie >= 11",
    "iOS >= 9",
    "Android >= 5"
  ]
}
